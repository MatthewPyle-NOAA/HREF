    <envar>
     <name>NEST</name>
     <value>&domain;</value>
    </envar>

    <envar>
      <name>HOMEhref</name>
      <value>&HOMEhref;</value>
    </envar>
    <envar>
      <name>job</name>
      <value>preprocfv3_&domain;</value>
    </envar>

    <envar>
     <name>MYCOMROOT</name>
     <value>&MYCOMROOT;</value>
    </envar>

    <envar>
