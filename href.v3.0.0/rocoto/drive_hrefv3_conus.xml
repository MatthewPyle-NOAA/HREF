    <envar>
      <name>PDY</name>
      <value><cyclestr>@Y@m@d</cyclestr></value>
    </envar>
    <envar>
      <name>cyc</name>
      <value><cyclestr>@H</cyclestr></value>
    </envar>

    <envar>
      <name>COMINnam</name>
      <value>&COMINnam;</value>
    </envar>

    <envar>
      <name>COMINhrrr</name>
      <value>&COMINhrrr;</value>
    </envar>

    <envar>
      <name>COMINfv3</name>
      <value>&COMINrrfs;</value>
    </envar>

    <dependency>
        <and>
<!-- Make sure even and odd forecast hours are done -->
       <datadep age="03:00" minsize="100000000"><cyclestr>&COMINrrfs;/01/PRSLEV.GrbF60</cyclestr></datadep>
